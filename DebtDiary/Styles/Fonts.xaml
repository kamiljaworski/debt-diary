    <FontFamily x:Key="Segoe-MDL2">pack://appliction;,,,/Fonts/#Segoe MDL2 Assets</FontFamily>
    <FontFamily x:Key="GeosansLight">pack://appliction;,,,/Fonts/#GeosansLight</FontFamily>

